{% trans_default_domain 'FOSUserBundle' %}

{% extends "::base.html.twig" %}


{% block title %}Confirmation réussie SEI{% endblock %}


{% block page_header %}
  <div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <h1 class="header center orange-text">Confirmation réussie</h1>
      <div class="row center">
        <h5 class="header col s12 light"></h5>
      </div>
    </div>
  </div>
{% endblock %}


{% block page_content %}
<div class="container">
  <div class="row">
      {% block fos_user_content %}
      <!-- <p>On me dit que mon compte est déjà activé</p> -->
        <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
      {% if targetUrl %}
        <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
      {% endif %}
      {% endblock fos_user_content %}
      <div class="ui horizontal divider">
        Pour continuer votre navigation
      </div>
      <h2 class="ui header"></h2>
      <a href="{{ path('homepage') }}" class="btn waves-effect waves-light">
        Cliquez sur ce bouton
        <i class="add icon"></i>
      </a>
  </div>
</div>
{% endblock %}
