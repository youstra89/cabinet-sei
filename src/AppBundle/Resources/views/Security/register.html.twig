<!DOCTYPE html>
<html>
<head>
  <!-- Standard Meta -->
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <!-- Site Properties -->
  <title>{% block title %}Inscription SEI{% endblock %}</title>
  {% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/reset.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/site.css') }}">

    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/container.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/message.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/grid.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/header.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/image.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/menu.css') }}">

    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/divider.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/dropdown.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/segment.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/button.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/modal.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/dimmer.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/flag.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/form.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/list.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/icon.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/sidebar.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/components/transition.css') }}">
  {% endblock %}
</head>
<body>
  <div class="ui page dimmer">


</div>
<div class="ui center aligned basic segment">
  {% set notif = app.session.flashbag.get('success') %}
  {% if notif is not empty %}
  <div class="ui green message">
    <div class="header">{{ 'Succès'|trans }}:</div>
    <ul class="list">
      {% for message in notif %}
      <li>{{ message }}.</li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}
  {% for message in app.session.flashbag.get('warning') %}
  <div class="ui orange message">
    <div class="header">{{ 'Attention'|trans }} !!! </div>
    <ul class="list">
      <li>{{ message }}</li>
    </ul>
  </div>
  {% endfor %}
  {% for message in app.session.flashbag.get('error') %}
  <div class="ui red message">
    <div class="header">{{ 'Erreur'|trans }} !!! </div>
    <ul class="list">
      <li>{{ message }}</li>
    </ul>
  </div>
  {% endfor %}
</div>
<div class="ui container">
    <div class="ui center aligned basic segment">
    	<h2 class="ui header">Inscrivez-vous</h2>
      {{form_start(form, {'attr': {'class': 'ui form'}})}}
      <div class="two fields">
        <div class="field">
          <label for="form_nom">
             {{ form_label(form.nom, "Nom", {'label_attr': {'class': ''}}) }}
             {{ form_errors(form.nom) }}
          </label>
           {{ form_widget(form.nom, {'attr': {'placeholder': 'Nom de famille'}}) }}
        </div>
        <div class="field">
          <label for="form_pnom">
             {{ form_label(form.pnom, "Prénom", {'label_attr': {'class': ''}}) }}
             {{ form_errors(form.pnom) }}
          </label>
           {{ form_widget(form.pnom, {'attr': {'placeholder': 'Le prénom'}}) }}
        </div>
      </div>
      <div class="field">
        <label for="form_email">
           {{ form_label(form.email, "E-mail", {'label_attr': {'class': ''}}) }}
           {{ form_errors(form.email) }}
        </label>
         {{ form_widget(form.email, {'attr': {'placeholder': 'Votre adresse électronique'}}) }}
      </div>
      <div class="three fields">
        <div class="field">
          <label for="form_nom">
             {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': ''}}) }}
             {{ form_errors(form.username) }}
          </label>
           {{ form_widget(form.username, {'attr': {'placeholder': 'Votre nom d\'utilisateur'}}) }}
        </div>
        <div class="field">
          <label for="">
             {{ form_label(form.password.first, "Mot de passe", {'label_attr': {'class': ''}}) }}
             {{ form_errors(form.password.first) }}
          </label>
           {{ form_widget(form.password.first, {'attr': {'placeholder': 'Entrez votre mot de passe'}}) }}
        </div>
        <div class="field">
          <label for="">
             {{ form_label(form.password.second, "Confirmez le mot de passe", {'label_attr': {'class': ''}}) }}
             {{ form_errors(form.password.second) }}
          </label>
           {{ form_widget(form.password.second, {'attr': {'placeholder': 'Confirmation du mot de passe'}}) }}
        </div>
      </div>

        <button type="submit" class="ui teal button">S'inscrire !</button>
      {{ form_end(form) }}
    	<div class="ui horizontal divider">
    	  Ou
    	</div>
    	<h2 class="ui header">Si vous avez déjà un compte</h2>
    	<a href="{{ path('security_login') }}" class="ui positive labeled icon button">
    	  Comptez-vous en cliquant ici
    	  <i class="add icon"></i>
    	</a>

    </div>
  </div>
</body>
</html>
