{% extends 'base.html.twig' %}

{% block meta %}
  <meta name="description" content="Votre compte personnel chez Cabinet SEI" />
  <meta name="keywords" lang="fr" content="SEI, Cabiet SEI, études à l'international" />
{% endblock %}

{% block title %}Mon compte | SEI{% endblock %}


{% block page_header %}
  <div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <h1 class="header center orange-text">Mon compte personnel</h1>
      <div class="row center">
        <h5 class="header col s12 light"></h5>
      </div>
    </div>
  </div>
{% endblock %}


{% block page_content %}
<div class="container">
  <div class="row">
    <ul class="collapsible">
    <li>
      <div class="collapsible-header"><i class="material-icons">filter_drama</i>Personel</div>
      <div class="collapsible-body">
        <span>
          <div class="ui bottom attached active tab segment" data-tab="first">
            <table>
              <thead>
                <tr>
                  <th>Données</th>
                  <th>Valeur</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Nom complet</td>
                  <td>{{ app.user.nom }} {{ app.user.pnom }}</td>
                </tr>
                <tr>
                  <td>Numéro de téléphone</td>
                  <td>{{ app.user.contact }}</td>
                </tr>
                <tr>
                  <td>Email</td>
                  <td>{{ app.user.email }}</td>
                </tr>
                <tr>
                  <td>Dernière connexion</td>
                  <td>{{ app.user.lastLogin|date("d-m-Y") }}</td>
                </tr>
                <tr>
                  <td>Filière de formation</td>
                  <td>{{ app.user.filiere }}</td>
                </tr>
              </tbody>
            </table>
            <a href="{{ path('update_profile') }}" class="btn-large waves-effect waves-light blue"> Mettre à jour mon profile</a>
          </div>
        </span>
      </div>
    </li>
    <li>
      <div class="collapsible-header"><i class="material-icons">place</i>Messages</div>
      <div class="collapsible-body">
        <span>
          <div class="ui bottom attached tab segment" data-tab="second">
            Les messages que vous nous avez laissés
            {% if messages is empty %}
              <p>Aucun message pour le moment</p>
            {% else %}
            <table class="ui very basic selectable table">
              <thead>
                <tr>
                  <th>N°</th>
                  <th>Date</th>
                  <th>Sujet</th>
                  <th>Message</th>
                </tr>
              </thead>
              <tbody>
                {% set n = 0 %}
                {% for msg in messages %}
                  {% set n = n + 1 %}
                  <tr>
                    <td>{{ n }}</td>
                    <td>{{ msg.dateSave|date("d-m-Y") }}</td>
                    <td>{{ msg.subject }}</td>
                    <td>{{ msg.message }}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
            {% endif %}
          </div>
        </span>
      </div>
    </li>
    <li>
      <div class="collapsible-header"><i class="material-icons">whatshot</i>Rendez-vous</div>
      <div class="collapsible-body">
        <span>
          <div class="ui bottom attached tab segment" data-tab="third">
            Vos rendez-vous avec nous
            {% if rdv is empty %}
              <p>Aucun rdv pris</p>
              <a href="{{ path('rdv') }}" class="btn-large waves-effect waves-light orange">Fixer un rendez-vous</a>
            {% else %}
              <table class="ui very basic selectable table">
                <thead>
                  <tr>
                    <th>N°</th>
                    <th>Date</th>
                    <th>Heure</th>
                    <th>Sujet</th>
                    <th>Message</th>
                  </tr>
                </thead>
                <tbody>
                  {% set n = 0 %}
                  {% for r in rdv %}
                    {% set n = n + 1 %}
                    <tr>
                      <td>{{ n }}</td>
                      <td>{{ r.dateRdv|date("d-m-Y") }}</td>
                      <td>{{ r.heure }}</td>
                      <td>{{ r.subject }}</td>
                      <td>{{ r.message }}</td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            {% endif %}
          </div>
        </span>
      </div>
    </li>
  </ul>
  </div>
</div>
{% endblock %}
