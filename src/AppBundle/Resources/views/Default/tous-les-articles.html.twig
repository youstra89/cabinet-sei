{% extends 'base.html.twig' %}


{% block title %}Tous les articles du cabinet SEI{% endblock %}


{% block page_header %}
  <div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <h1 class="header center orange-text">Tous les articles</h1>
      <div class="row center">
        <!-- <h5 class="header col s12 light">Vous pouvez aussi prendre render-vous avec nous</h5> -->
      </div>
    </div>
  </div>
{% endblock %}


{% block page_content %}
    <div class="container">
      <div class="row">
        {% for article in articles %}
          <div class="col s12 m4">
            <div class="card">
              <div class="card-image waves-effect waves-block waves-light">
                <img src="{{ asset('img/destinations/maroc_1.jpg') }}" alt="maroc">
              </div>
              <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">{{ article.title }}<i class="material-icons right">more_vert</i></span>
                <p><a href="#">{{ article.articleType }}</a></p>
                <p>Date de publication: <i>{{ article.datePublished|date('d-m-Y Ã  H:i') }}</i></p>
                <p>Par: {{ article.user.username }}</p>
              </div>
              <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">{{ article.title }}<i class="material-icons right">close</i></span>
                <p>{{ article.description }}</p>
                <p><a href="{{ path('lire_article', {'id': article.id}) }}" class="waves-effect waves-light btn-small">Lire...</a></p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
{% endblock %}
